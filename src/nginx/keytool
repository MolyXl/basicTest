#使用keytool命令生成证书
    keytool -genkey -alias molyx -keypass mylord -keyalg RSA -keysize 1024 -validity 365 -keystore D:/molyx.keystore -storepass mylord
#导出为一个单独的CER文件
    keytool -keystore D:/molyx.keystore -export -alias molyx -file D:/server.cer

#为浏览器生成证书
    keytool -genkey -alias molyx -keypass mylord -keyalg RSA -storetype PKCS12 -keypass mylord -storepass mylord -keystore D:/molyx.p12
#导出为一个单独的CER文件
    keytool -export -alias molyx -keystore D:/molyx.p12 -storetype PKCS12 -keypass 123456 -file d:/molyx.cer
#导入到服务器的证书库
    keytool -import -v -file D:/molyx.cer -keystore D:/molyx.keystor
#查看服务器的证书库
    keytool -list -v -keystore D:/molyx.keystore
